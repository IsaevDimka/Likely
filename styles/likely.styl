.likely,
.likely__widget {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin: 0;
  padding: 0;
  list-style: none !important;
  font-size: inherit;
}

// Hide buttons until they are loaded
.likely {
  display: inline-block;
  opacity: 0;
}
.likely_visible {
  opacity: 1;
  transition: opacity .1s ease-in;
}
.likely > * {
  visibility: hidden;
}
.likely_visible > * {
  visibility: inherit;
}

.likely {
  // outline: 1px #f00 solid;
  &__widget {
    display: inline-flex;
    align-items: center;
    position: relative;
    white-space: nowrap;
    padding: 0.2em;
  }

  &__button,
  &__counter {
    text-decoration: none;
    text-rendering: optimizeLegibility;
    display: inline-block;
    margin: 0;
    outline: 0;
  }

  &__button {
    position: relative;
    cursor: pointer;
    user-select: none;
    margin-left: -2px;
  }

  &__counter {
    display: none;
    position: relative;
    font-weight: normal;
  }

  &_ready &__counter {
    display: inline-block;
  }

  &_ready &__counter_empty {
    display: none;
  }

  &__widget {

    transition: widget-transition = background .33s ease-out, color .33s ease-out, fill .33s ease-out;

    &:hover, &:active, &:focus {
      transition: none;
      cursor: pointer;

      @media (hover: none) {
        transition: widget-transition;
        cursor: unset;
      }
    }

  }

  &__icon {
    position: relative;
    text-align: left;
    display: inline-block;
    margin-right: 0.2em;
  }

  &__button,
  &__counter {
    line-height: inherit;
    cursor: inherit;
  }

  &__button:empty {
    display: none;
  }

  &__counter {
    text-align: center;
  }

}

/* Style options */
likely-background = rgba(231,231,231,.8);
likely-light-background = rgba(236,236,236,.16);
likely-light-box-shadow = rgba(0,0,0,.2) 0 0 .33em;

.likely {
  .likely__widget {
    color: #000;
    background: likely-background;
  }
  .likely__counter {
    background-size: 1px 1px;
    background-repeat: repeat-y;
    background-image: linear-gradient(to right, rgba(0,0,0,.2) 0, rgba(0,0,0,0) .5px, rgba(0,0,0,0) 100%)
  }
}
.likely-light {
  .likely__widget {
    color: #fff;
    fill: #fff;
    background: likely-light-background;
    text-shadow: likely-light-box-shadow;
  }
  .likely__counter {
    background-image: linear-gradient(to right, rgba(255,255,255,.4) 0, rgba(255,255,255,0) .5px, rgba(255,255,255,0) 100%)
  }
}

colorize(button, color) {
  .likely__widget_{button} {
    fill: color;
    &:hover, &:active, &:focus {
      background: alpha(mix(#fff,color,75%),.8);

      @media (hover: none) {
        background: likely-background;
      }
    }
  }
  .likely-light {
    .likely__widget_{button} {
      &:hover, &:active, &:focus {
        text-shadow: color 0 0 .25em;
        background: alpha(color,0.7);

        @media (hover: none) {
          text-shadow: likely-light-box-shadow;
          background: likely-light-background;
        }
      }
    }
  }
}

